@page
@model Tippy.Pages.Projects.CreateModel

@{ ViewData["Title"] = "Create chain"; }

<h1 class="title">Create chain</h1>

<div class="container">
    <div class="columns">
        <form method="post" class="column is-half is-offset-one-quarter">
            <div class="box form-box ">
                <div class="card">
                    <header class="card-header">
                        <p class="card-header-title has-text-dark">
                            Select Contracts into chain.
                        </p>
                        <button id="btn" onclick="return false;" class="card-header-icon" aria-label="more options">
                            <span class="icon">
                                <i class="fas fa-angle-down" aria-hidden="true"></i>
                            </span>
                        </button>
                    </header>
                    <div class="card-content" hidden="hidden">
                        <div class="content">
                            @for (int i = 0; i < Model.ConstractFiles.Count; i++)
                            {

                                <div>
                                    <label class="checkbox">
                                        <input type="checkbox" asp-for="@Model.ConstractFiles[i].selectforintockb">
                                        @Model.ConstractFiles[i].filename
                                        <input asp-for="@Model.ConstractFiles[i].filepath" type="hidden" />
                                        <input asp-for="@Model.ConstractFiles[i].filename" type="hidden" />
                                    </label>
                                </div>


                            }

                        </div>
                    </div>

                </div>

                <div asp-validation-summary="ModelOnly" class="has-text-danger-dark"></div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Project.Name" class="label"></label>
                        <input asp-for="Project.Name" class="input" />
                        <span asp-validation-for="Project.Name" class="has-text-danger-dark"></span>
                    </div>
                </div>

                <div class="field">
                    <label asp-for="Project.Chain" class="label"></label>
                    <div class="control">
                        <div class="select">
                            <select asp-for="Project.Chain" asp-items="Html.GetEnumSelectList<Tippy.Core.Models.Project.ChainType>()"></select>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Project.NodeRpcPort" class="label"></label>
                        <input asp-for="Project.NodeRpcPort" class="input" />
                        <span asp-validation-for="Project.NodeRpcPort" class="has-text-danger-dark"></span>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Project.NodeNetworkPort" class="label"></label>
                        <input asp-for="Project.NodeNetworkPort" class="input" />
                        <span asp-validation-for="Project.NodeNetworkPort" class="has-text-danger-dark"></span>
                    </div>
                </div>




                <div class="field">
                    <div class="control">
                        <label asp-for="Project.InitCapacity" class="label"></label>
                        <input asp-for="Project.InitCapacity" class="input" />
                        <span asp-validation-for="Project.InitCapacity" class="has-text-danger-dark"></span>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Project.IndexerRpcPort" class="label"></label>
                        <input asp-for="Project.IndexerRpcPort" class="input" />
                        <span asp-validation-for="Project.IndexerRpcPort" class="has-text-danger-dark"></span>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <label asp-for="Project.LockArg" class="label"></label>
                        <input asp-for="Project.LockArg" class="input" />
                        <span asp-validation-for="Project.LockArg" class="has-text-danger-dark"></span>
                        <p class="help is-size-6">You can also input a CKB address, which will be converted to lock arg.</p>
                    </div>
                </div>
            </div>
            <div class="field is-grouped is-grouped-right">
                <div class="control">
                    <input type="submit" value="Create" class="button is-primary is-primary-override" />
                </div>
                <div class="control">
                    <a asp-page="Index" class="button is-light">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#btn").click(function () {
                $(".card-content").toggle(500);
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
